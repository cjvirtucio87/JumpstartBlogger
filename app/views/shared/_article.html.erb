<div class="card">
  <h1><%= article.title %></h1>
  <%= link_to "edit", edit_article_path(article) %>
  <%= link_to "delete", 
      article_path(article), method: :delete,
                             data: { confirm: "Are you sure?"} %>
  <p><%= article.body %></p>
  <ul>
    <% article.tags.each do |tag| %>
      <li><%= link_to tag.name, tag_path(tag) %></li>
    <% end %>
  </ul>


  <h4>Comments</h4>
  <%= render partial: 'shared/comment_form', locals: { article: article,
                                                       comment: comment } %>

  <ul>
    <%= render partial: 'shared/comment', collection: article.comments %>
  </ul>
</div>